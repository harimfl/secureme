<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hari.secureme.MainActivity"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:id="@+id/imageView2"
        android:src="@drawable/police"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentStart="true">>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="2"
            android:showDividers="beginning|middle|end">
            <TableRow android:layout_marginLeft="-10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:id="@+id/button"
                android:layout_marginRight="10dp"
                android:background="@drawable/murderimage"
                android:onClick="onMurderClicked" />

            <Button
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:id="@+id/button2"
                android:background="@drawable/rape"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:onClick="onRapeClicked" />
            </TableRow>
            <TableRow android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="0dp">
            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/button3"
                android:layout_marginTop="0dp"
                android:background="@drawable/robbery"
                android:layout_marginRight="10dp"
                android:onClick="onRobberyClicked" />

                <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                    android:id="@+id/button4"
                android:background="@drawable/accident"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:onClick="onAccidentClicked" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <Button
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:id="@+id/button5"
                    android:background="@drawable/emergency"
                    android:layout_marginRight="10dp"
                    android:onClick="onEmergencyCallClicked" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:id="@+id/button13"
                    android:background="@drawable/tease"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:onClick="onEveClicked" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" >

                <Button
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:id="@+id/button6"
                    android:background="@drawable/trackme"
                    android:layout_marginRight="10dp"
                    android:onClick="onTrackMeClicked" />

                <Button
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:id="@+id/button8"
                    android:background="@drawable/kidnap"
                    android:layout_marginLeft="10dp"
                    android:onClick="onKidnappClicked"
                    android:layout_marginRight="5dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" >

                <Button
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:id="@+id/button10"
                    android:background="@drawable/status"
                    android:layout_marginLeft="10dp"
                    android:onClick="onPreviousStatusClicked"
                    android:layout_marginRight="5dp" />
            </TableRow>

        </TableLayout>
    </ScrollView>

</RelativeLayout>
